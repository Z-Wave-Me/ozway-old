    <configParams>
        <configParam number="1" type="rangemapped" size="1" default="ff">
            <name>
                <lang xml:lang="en">Parameter Number 1</lang>
              </name>
                  <description>
                <lang xml:lang="en">Disables/enables temperature sensor</lang>
              </description>
      
                  <value from="00" to="7f">
