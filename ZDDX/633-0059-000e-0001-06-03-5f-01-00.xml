      </assocGroups>
  
    <configParams>
        <configParam number="1" type="constant" size="1" default="00">
            <name>
                <lang xml:lang="en">Delta based switch Status reporting</lang>
              </name>
                  <description>
                <lang xml:lang="en">Sends a report if switch was used.
Function is disabled by default.</lang>
              </description>
      
                  <value from="00" to="00">
                <description>
                    <lang xml:lang="en">0 = disable status reporting</lang>
                  </description>
              </value>
            <value from="01" to="01">
                <description>
                    <lang xml:lang="en">1 = enable status reporting</lang>
                  </description>
              </value>
                </configParam>
        <configParam number="2" type="range" size="2" default="0000">
            <name>
                <lang xml:lang="en">Time interval based Switch Status Reporting</lang>
              </name>
                  <description>
                <lang xml:lang="en">Sets time interval.</lang>
              </description>
      
                  <value from="8000" to="7fff" unit="sec">
                <description>
                    <lang xml:lang="en">Define time interval.</lang>
                  </description>
              </value>
            <value from="0000" to="0000">
                <description>
                    <lang xml:lang="en">Function is disabled.</lang>
                  </description>
              </value>
                </configParam>
        <configParam number="3" type="constant" size="1" default="00">
            <name>
                <lang xml:lang="en">Relay &amp; LED configuration</lang>
              </name>
                  <description>
                <lang xml:lang="en">Function is disabled by default.</lang>
              </description>
      
                  <value from="00" to="00">
                <description>
                    <lang xml:lang="en">Relay status after
power cycle = off; LED status is ON for relay close and OFF for relay open.</lang>
                  </description>
              </value>
            <value from="01" to="01">
                <description>
                    <lang xml:lang="en">Retain last status over the
power cycle; LED status is ON for relay close and OFF for relay open.</lang>
                  </description>
              </value>
            <value from="02" to="02">
                <description>
                    <lang xml:lang="en">Relay status after
power cycle = off; LED status is ON for relay open and OFF for relay close.</lang>
                  </description>
              </value>
            <value from="03" to="03">
                <description>
                    <lang xml:lang="en">Retain last status over the
power cycle; LED status is ON for relay open and OFF for relay close.</lang>
                  </description>
              </value>
                </configParam>
      </configParams>
  
    
  
